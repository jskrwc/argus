<% if favorite = current_user.favorite_for(video) %>
  <%= link_to [video, favorite], class: 'custom-favorite btn btn-link', method: :delete do %>
    <i class="custom-favorite glyphicon glyphicon-star"></i>
  <% end %>
<% else %>
  <%= link_to [video, Favorite.new], class: 'custom-favorite btn btn-link', method: :post do %>
    <i class="custom-favorite glyphicon glyphicon-star-empty"></i>
  <% end %>
<% end %>
