<div class="row">
  <div class="col-md-8">
    <%= form_for [topic, video] do |f| %>
      <div class="form-group">
        <%= f.text_field :url, class: 'form-control', placeholder: "Enter YouTube video URL" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
